<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.ddap.muse.museplay.MainActivity">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitStart"
        android:src="@drawable/musewave1" />

    <TextView
        android:id="@+id/welcomeuser"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Welcome!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55dp" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Use the power of music to help you combat every situation!

Please connect your device to the Muse and press the button below."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btngetstarted"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:text="Get Started"
        android:textColor="#51b46d"
        android:textSize="23dp"
        android:textStyle="bold" />


</LinearLayout>
